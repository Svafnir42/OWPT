<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project___OWPT.MainPage"
             Title="Главная">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="floppa.jpg"
                SemanticProperties.Description="Cute cat floppa waching for you!"
                HeightRequest="300"
                HorizontalOptions="Center" />

            <Button
            x:Name="RegPage"
            Text="Вход"
            FontSize="20"
            Clicked ="RegPage_Clicked"
            HorizontalOptions="Center"
            WidthRequest="150"
            HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
